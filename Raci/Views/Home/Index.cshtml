<div id="body">
    <section class="featured">
        
    </section>
    <section class="content-wrapper main-content clear-fix">
        <img class="image" src="/api/image?tags=sea,cheese" alt="weeeeee"/>
        <img class="image2" alt="weeeeee"/>
        <img class="image3" alt="weeeeee"/>
    </section>
</div>

<div id="entry" style="float: right">
    <input class="tags" type="text"/>
    <a class="submit-button">Sumbit</a>
</div>

@section scripts
{
    <script type="text/javascript">
        $(function () {
            var refresh = function(value) {
                $.ajax({
                    type: "PUT",
                    contentType: "application/json",
                    url: "/api/image?tags=" + value,
                    data: { name: 'norm' },
                    dataType: "application/json",
                    success: function(data) {
                        var json = $.parseJSON(data);
                        $(".image2").attr("src", json.base);
                        $(".image3").attr("src", json.block);
                    }
                });
            };
            refresh("sea,cheese");
            $(".submit-button").click(function () {
                refresh($(".tags").val());
                $(".image").attr("src", "/api/image?tags=" + $(".tags").val());
            });
        });

    </script>
}
